$logo-size = 5em
$item-radius = 35vmin
$item-size = 4em
$circle-size = 1000px

box-sizing()
  -webkit-box-sizing: arguments
  -moz-box-sizing: arguments
  box-sizing: arguments

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transform arguments
  transform arguments

html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative
  overflow hidden
  background-color #222
  background-image url(imgs/bg-mobile.jpg)
  background-size cover
  background-position center

.page
  width 100%
  height 100%
  position absolute
  top -100%
  transition all .5s

  &:target
    top 0
    .circle
      &:after
        display block
      .dep-logo
        bottom 0

  &#intro
    .positioner
      width 0
      height 0
      top 50%
      left 50%
      position absolute

      .logo
        width $logo-size
        height $logo-size
        margin-top - ($logo-size / 2)
        margin-left - ($logo-size / 2)
        top 50%
        left 50%
        position absolute
        background-image url(imgs/logo-white.png)
        background-size contain
        background-position center
        background-repeat no-repeat

      .item
        width $item-size
        height $item-size
        display block
        border-radius 10em
        line-height 4em
        text-align center
        color black
        text-decoration none
        position absolute
        margin-top - ($item-size / 2)
        margin-left - ($item-size / 2)
        border-width 2px
        border-style solid

        &#link-tech
          top - $item-radius
          left 0
          color #fdccff
          border-color #fdccff

        &#link-video
          top 0.707 * $item-radius
          left 0.707 * $item-radius
          color #ffccd8
          border-color #ffccd8

        &#link-photo
          top - 0.707 * $item-radius
          left 0.707 * $item-radius
          color #ffeecc
          border-color #ffeecc

        &#link-news
          top 0
          left $item-radius
          color #e8ffcc
          border-color #e8ffcc

        &#link-tide
          top $item-radius
          left 0
          color #ccffd5
          border-color #ccffd5

        &#link-hr
          top 0.707 * $item-radius
          left - 0.707 * $item-radius
          color #ccfffe
          border-color #ccfffe

        &#link-outreach
          top 0
          left - $item-radius
          color #ccdeff
          border-color #ccdeff

        &#link-pm
          top - 0.707 * $item-radius
          left - 0.707 * $item-radius
          color #d7ccff
          border-color #d7ccff

  .circle
    width $circle-size
    height $circle-size
    margin-left - ($circle-size / 2)
    background-color white
    border-radius ($circle-size / 2)
    position absolute
    bottom 30%
    left 50%
    &:after
      display none
      content " "
      position absolute
      height 1em
      width 100vw
      margin-left -50vw
      left 50%
      bottom 10vh
      background linear-gradient(-90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -ms-linear-gradient(-90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -moz-linear-gradient(-90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -webkit-linear-gradient(-90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
    .back
      display block
      width 100vw
      height 2em
      position absolute
      bottom 1em
      left 50%
      z-index 1
      margin-left -50vw
      &:after
        content " "
        width 0
        height 0
        position absolute
        left 50%
        bottom 1em
        border-width 5px
        border-style solid
        border-color transparent transparent black transparent
    .text-scroller
      position absolute
      width 100vw
      margin-left -50vw
      height 60vh
      overflow-y auto
      overflow-x hidden
      padding 1em
      box-sizing border-box
      left 50%
      bottom 10vh

      .text-wrapper
        p
          text-indent 2em
        h2
          margin-top 0
    .dep-logo
      position fixed
      width 100%
      height 20vh
      bottom -20vh
      left 0
      background-size contain
      background-repeat no-repeat
      background-position center

  &#hr
    .dep-logo
      background-image url(imgs/hr.png)

  &#photo
    .dep-logo
      background-image url(imgs/photo.png)

  &#news
    .dep-logo
      background-image url(imgs/news.png)

  &#video
    .dep-logo
      background-image url(imgs/video.png)

  &#outreach
    .dep-logo
      background-image url(imgs/outreach.png)

  &#tide
    .dep-logo
      background-image url(imgs/tide.png)

  &#tech
    .dep-logo
      background-image url(imgs/tech.png)

  &#pm
    .dep-logo
      background-image url(imgs/pm.png)

#joinus
  top auto
  bottom -100%
  &:target
    top auto
    bottom 0
    .circle-big .back
      bottom 70vh
    #joinus-wrapper
      bottom 0
      &:before
        display block

  .circle-big
    width $circle-size
    height $circle-size
    border-radius ($circle-size / 2)
    bottom -20vh
    left 50%
    margin-bottom - ($circle-size / 2)
    margin-left - ($circle-size / 2)
    position absolute
    background-color white
    .back
      display block
      position fixed
      color black
      width 100%
      height 2em
      bottom -2em
      left 0
      z-index 1
      &:after
        content "."
        position absolute
        width 0
        height 0
        overflow hidden
        border-width 5px
        border-style solid
        border-color black transparent transparent transparent
        top 0
        left 50%

  #joinus-wrapper
    position fixed
    width 100%
    height 70vh
    padding 1em
    bottom -70vh
    left 0
    box-sizing border-box
    overflow-y auto
    overflow-x hidden
    &:before
      content: " "
      display none
      position fixed
      bottom 70vh
      margin-bottom -1em
      left 0
      height 1em
      width 100%
      z-index 1
      background linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -ms-linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -moz-linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))
      background -webkit-linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1))

    .input.note
      color grey
      font-size 0.8em
    .input
      display block
      width 100%
      box-sizing border-box
      padding .5em
      margin-bottom 1em
      position relative
    .input-text
      border-bottom 2px solid black
      position relative
      label
        position absolute
        color grey
        bottom .5em
        left .5em
      input[type=text]
        display block
        margin 0
        width 100%
        box-sizing border-box
        padding 0
        font-size 1em
        background-color transparent
        border 0
      &:focus
        label
          bottom 2.3em
          font-size .8em
          color black
    .input-select
      border 2px solid black
      &:after
        content " "
        width 0
        height 0
        border-width 5px
        border-style solid
        border-color black transparent transparent transparent
        position absolute
        right 1em
        top 1em
      select
        display none
    .input-textarea
      textarea
        display block
        width 100%
        border-color black
        border-style solid
        border-width 2px 0
        height 5em
    .input-file
      input[type=file]
        display none
      .prompt
        position relative
        .button
          width 3em
          height 100%
          border 2px solid black
          border-radius 2em
          text-align center
          display inline-block
          float right
          box-sizing border-box
    .input-submit
      .button
        height 2em
        width 100%
        border 2px solid black
        line-height 2em
        text-align center
        border-radius 2em
